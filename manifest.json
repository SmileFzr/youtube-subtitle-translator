{
  "manifest_version": 3,
  "name": "YouTube 实时字幕翻译器（Edge/Chrome 通用版）",
  "version": "1.0.2",
  "description": "兼容 Edge 和 Chrome 的 YouTube 实时字幕翻译扩展程序。支持定制样式、拖拽定位和字幕导出。",
  "permissions": [
    "activeTab",
    "storage", 
    "scripting",
    "tabs", 
    "windows"
  ],
  "host_permissions": [
    "*://www.youtube.com/*" 
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html", 
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}